{
  "version": 2,
  "builds": [
    { "src": "api/*.js", "use": "@vercel/node" },
    { "src": "public/**", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "^/$", "dest": "/api/app.js" },
    { "src": "^/login/?$", "dest": "/public/login.html" },
    { "src": "^/index\\.html$", "dest": "/api/app.js" },
    { "handle": "filesystem" }
  ]
}
